<div>
  <% if user_signed_in? %>
    <h1 class="font-bold text-4xl text-blue-500 mb-6">Welcome, <%= current_user.first_name + " " + current_user.last_name %> </h1>
    <% if current_user.doctor? %>
      <p> <%= Category.find(current_user.category_id).title.delete_suffix("s") %> </p>
    <% elsif current_user.admin? %>
      <%= link_to "Admin dashboard", admin_categories_path, class: 'inline-block bg-blue-600 text-white text-sm px-4 py-2 leading-none border rounded border-white hover:border-transparent hover:bg-blue-500 mt-4 lg:mt-0 mr-6' %>
    <% end %>
  <% else %>
    <div class="grid-rows-2">
      <h1 class="font-bold text-4xl text-blue-500 mb-6">
        Welcome to the Clinic app!
      </h1>
      <h2>
        Please sign in or sign up to continue
      </h2>
    </div>
    <div class="grid-rows-2 mt-5">
      <%= link_to "Sign in", new_user_session_path, class: 'inline-block bg-blue-600 text-white text-sm px-4 py-2 leading-none border rounded border-white hover:border-transparent hover:bg-blue-500 mt-4 lg:mt-0' %>
      <%= link_to "Sign up", new_user_registration_path, class: 'inline-block bg-blue-600 text-white text-sm px-4 py-2 leading-none border rounded border-white hover:border-transparent hover:bg-blue-500 mt-4 lg:mt-0 mr-6' %>
    </div>
<% end %>
</div>